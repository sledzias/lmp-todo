<div class="container">
  <div id="todoapp">

    <h1 class="text-center">LMP ToDo</h1>
    <% if user_signed_in? %>
    <div id="user-id"data-user-id="<%= current_user.id %>"></div>
    <% end %>
    <div id="tasks">
      <%= render @tasks %>
    </div>

    <div class="row">

      <div class="col-sm-8 col-sm-offset-2">
        <div class="input-group input-group-lg">
          <span class="input-group-btn">
            <button class="btn btn-success btn-lg"><i class="fa fa-chevron-right"></i></button>
          </span>

          <form id="todo-form">
            <input class="form-control input-lg" id="new-todo" placeholder="What needs to be done?" autofocus="">
          </form>
          <span class="input-group-btn">
            <button class="btn btn-default btn-lg" id="create-btn"><i class="glyphicon glyphicon-plus"></i></button>
          </span>
        </div>
        <!-- /input-group -->
      </div>
      <!-- /.col-lg-6 -->

    </div>
    <!-- /row -->

    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <hr>
        <!-- /divider -->
      </div>
    </div>


    <div class="row">
      <div class="col-sm-4 col-sm-offset-2">

        <button class="btn btn-default btn-lg" id="toggle-all"><i class="fa fa-check"></i></button>
        Mark all as complete
      </div>
      <div class="col-sm-4 text-right">

      </div>
    </div>
    <!-- /row -->

    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <hr>
        <!-- /divider -->
      </div>
    </div>

    <div class="row">
      <div class="col-sm-2 col-sm-offset-2  text-center">
        <span id="todo-count"><strong></strong>

        </span>
      </div>
      <div class="col-sm-4 text-center">
        <ul class="list-inline" id="filters">
          <li>
          
            <span class="badge badge-info">
            <%= link_to('All', tasks_path(:filter => :all), class: "btn btn-sm filter-link" )  %>
            <%= @tasks.count_tasks('all')  %></span>
          </li>
          <li>

            <span class="badge badge-info">
            <%= link_to 'Active', tasks_path(:filter => :active), class: "btn btn-sm filter-link"   %>
            <%= @tasks.count_tasks('active')  %></span>
          </li>
          <li>
            <span class="badge badge-info">
            <%= link_to 'Completed', tasks_path(:filter => :completed), class: "btn btn-sm filter-link"   %>
            <%= @tasks.count_tasks('completed')  %></span>
          </li>
        </ul>
      </div>
      <div class="col-sm-2  text-center">
        <button class="btn btn-sm btn-success" id="clear-completed">Clear completed <%= @tasks.count_tasks('completed')  %></button>
      </div>


    </div>
    <!--/ row -->


    <hr>


    <hr>

  </div>
  <!--/ app -->
</div><!--/ container -->

<footer class="well">
  Thanks <a href="http://todomvc.com/">TodoMVC</a>. Bootstrap by <a href="http://bootply.com/127322">Bootply</a>.
</footer>