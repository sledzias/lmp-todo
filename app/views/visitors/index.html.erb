<div class="container" ng-app='lmp'>
  <div id="todoapp" ng-controller='TaskController'>
    <h1 class="text-center">LMP ToDo</h1>

    <div class="row" ng-repeat='task in tasks | filter: filterTasks(taskfilter)'>
      <div class="col-sm-8 col-sm-offset-2">
        <div class="input-group input-group-lg">
          <span class="input-group-addon">
            <a href="#"><i class="fa fa-check" ng-class="checkTask(task.done)" ng-click="changeTask(task)"></i></a>
          </span>
          <form>
            <input class="edit form-control input-lg" ng-model='task.description' ng-blur='update(task)'>
          </form>
          <span class="input-group-btn">
            <button class="btn btn-default btn-lg destroy" ng-click='destroy(task)'><i class="glyphicon
            glyphicon-remove"></i></button>
          </span>
        </div>
        <!-- /input-group -->
      </div>
      <!-- /.col-lg-6 -->

    </div>
    <!-- /row -->

    <div class="row">

      <div class="col-sm-8 col-sm-offset-2">
        <div class="input-group input-group-lg">
                  <span class="input-group-btn">
                    <button class="btn btn-success btn-lg"><i class="fa fa-chevron-right"></i></button>
                  </span>

          <form id="todo-form">
            <input class="form-control input-lg" id="new-todo" placeholder="What needs to be done?" autofocus="" ng-model='newTaskdescription'>
          </form>
                  <span class="input-group-btn">
                    <button class="btn btn-default btn-lg" ng-click='addTask(newTaskdescription, <%= current_user.id %>)'>
                      <i class="glyphicon glyphicon-plus"></i>
                    </button>
                  </span>
        </div>
        <!-- /input-group -->
      </div>
      <!-- /.col-lg-6 -->

    </div>
    <!-- /row -->

    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <hr>
        <!-- /divider -->
      </div>
    </div>


    <div class="row">
      <div class="col-sm-4 col-sm-offset-2">

        <button class="btn btn-default btn-lg" id="toggle-all" ng-click='markAll()'>
          <i class="fa fa-check"></i>
        </button>
        Mark all as complete
      </div>
      <div class="col-sm-4 text-right">

      </div>
    </div>
    <!-- /row -->

    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <hr>
        <!-- /divider -->
      </div>
    </div>

    <div class="row">
      <div class="col-sm-2 col-sm-offset-2  text-center">
                <span id="todo-count"><strong></strong>

                </span>
      </div>
      <div class="col-sm-4 text-center">
        <ul class="list-inline" id="filters">
          <li>
            <a class="btn btn-sm" href="" ng-click='setFilter()'>All</a>
          </li>
          <li>
            <a class="btn btn-sm" href="" ng-click='setFilter(false)'>
              Active <span class="badge badge-info">1</span>
            </a>
          </li>
          <li>
            <a class="btn btn-sm" href="" ng-click='setFilter(true)'>Completed</a>
          </li>
        </ul>
      </div>
      <div class="col-sm-2  text-center">
        <button class="btn btn-sm btn-success" id="clear-completed" ng-click='clearCompleted()'>Clear completed (1)
        </button>
      </div>

    </div>
    <!--/ row -->


    <hr>


    <hr>

  </div>
  <!--/ app -->
</div><!--/ container -->

<footer class="well">
  Thanks <a href="http://todomvc.com/">TodoMVC</a>. Bootstrap by <a href="http://bootply.com/127322">Bootply</a>.
</footer>